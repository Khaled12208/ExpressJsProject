{
  "extends": "@istanbuljs/nyc-config-typescript",
  "all": true,
  "check-coverage": true,
  "reporter": [
    "html",
    "text",
    "text-summary",
    "json-summary",
    "lcov"
  ],
  "report-dir": "coverage",
  "cache": true,
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/server.ts",
    "src/types/**/*.ts",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/node_modules/**",
    "**/dist/**",
    "**/coverage/**",
    "**/tests/**"
  ],
  "extension": [
    ".ts"
  ],
  "branches": 80,
  "lines": 80,
  "functions": 80,
  "statements": 80,
  "watermarks": {
    "lines": [80, 95],
    "functions": [80, 95],
    "branches": [80, 95],
    "statements": [80, 95]
  }
} 